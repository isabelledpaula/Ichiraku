<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.isabe.ramemichiraku.fragments.DetalheFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_shopping_cart_black_24dp"
            android:elevation="2dp"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:tint="@android:color/white"/>
            <ImageView
                android:id="@+id/img_voltar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:elevation="2dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="8dp"
                android:tint="@android:color/white"/>

            <ImageView
                android:id="@+id/img_imagem_prato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/naruto_lamem"
                android:scaleType="fitXY" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:id="@+id/txt_titulo_prato"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:maxLines="3"
                android:text="Lamem Naruto muiro gostoso delicinha"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="RS 10,00"
                android:textSize="20dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <View
            android:padding="5dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:rotation="180"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/txt_descricao"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="Fatias de lombo, ovo cozido, cebolinha, nori e naruto. Apriveite!"
            android:textSize="20dp"/>
    </LinearLayout>

</FrameLayout>
