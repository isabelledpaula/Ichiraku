<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.isabe.ramemichiraku.activities.CadastroNovoPrato">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Novo prato"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:theme="@style/TextLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_novo_nome_prato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/novo_cardapio_nome"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:theme="@style/TextLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_novo_descricao_prato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/novo_cardapio_descricao"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:theme="@style/TextLabel">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_novo_preco_cardapio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/novo_cardapio_preco"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_marginBottom="16dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txt_novo_url_prato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/novo_cardapio_img"
                />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">
            <Button
                android:id="@+id/btn_novo_cadastrar_prato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Cadastrar"
                android:textColorHint="@color/azulzinho"
                android:textSize="12dp"
                android:background="@drawable/bg_botao_config"
                android:clickable="false"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
